<%- contentFor('body') %>
    <div class="card mb-4">
        <div class="card-body">
            <div id="layoutAuthentication">
                <div id="layoutAuthentication_content">
                    <main>
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-7">
                                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                                        <div class="card-header">
                                            <h3 class="text-center font-weight-light my-4">Change Password</h3>
                                        </div>
                                        <div class="card-body">
                                            <% if (success || error || (errorMessages && errorMessages.length> 0)) { %>
                                                <div>
                                                    <% if (success) { %>
                                                        <div
                                                            class="alert alert-success <% if (success.length == 0) { %> d-none <% } %>">
                                                            <%= success %>
                                                        </div>
                                                        <% } %>
                                                            <% if (error) { %>
                                                            <div
                                                                class="alert alert-danger <% if (error.length == 0) { %> d-none <% } %>">
                                                                <%= error %>
                                                            </div>
                                                            <% } %>
                                                            <% if (errorMessages && errorMessages.length> 0) {
                                                                %>
                                                                <div class="alert alert-danger">
                                                                    <ul>
                                                                        <% errorMessages.forEach(function(msg) {
                                                                            %>
                                                                            <li>
                                                                                <%= msg %>
                                                                            </li>
                                                                            <% }); %>
                                                                    </ul>
                                                                </div>
                                                            <% } %>
                                                    </div>
                                                <% } %>

                                                    <form action="/user/change-password" method="post"
                                                        accept-charset="utf-8">

                                                        <div class="form-floating mb-3">
                                                            <input class="form-control" name="currentPassword"
                                                                value="<%= userData ? userData.currentPassword : ''  %>"
                                                                id="currentPassword" type="password"
                                                                placeholder="name@example.com" />
                                                            <label for="currentPassword">Current password</label>
                                                        </div>

                                                        <div class="form-floating mb-3">
                                                            <input class="form-control" name="newPassword" value=""
                                                                id="newPassword" type="password"
                                                                placeholder="Enter new password" />
                                                            <label for="newPassword">New password</label>
                                                        </div>

                                                        <div class="form-floating mb-3">
                                                            <input class="form-control" name="confirmPassword" value=""
                                                                id="confirmPassword" type="password"
                                                                placeholder="Enter confirm password" />
                                                            <label for="confirmPassword">Confirm password</label>
                                                        </div>

                                                        <div class="mt-4 mb-0">
                                                            <div class="d-grid"><button type="submit"
                                                                    class="btn btn-primary btn-block">Submit</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>

            </div>
        </div>
    </div>